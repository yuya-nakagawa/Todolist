<div class="container">
  <form>
    <%= form_tag root_path, :method => 'get' do %>
      <div class="form-group">
        <div class="row justify-content-end">
          <div class="col-xs-4 mb-2">
            <%= text_field_tag :search, params[:search],  class: 'form-control float-right' %>
          </div>
          <div class="col-md-1 p-0 ml-1">
            <%= submit_tag "検索", :name => nil, class: 'btn btn-primary float-right' %>
          </div>
        </div>
      </div>
    <% end %>
  </form>
</div>